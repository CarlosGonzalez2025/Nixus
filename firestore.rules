
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isAdmin() {
      return isSignedIn() && getRole() == 'admin';
    }

    function isCreator(permit) {
      return request.auth.uid == permit.createdBy;
    }
    
    function isSolicitante() {
      let role = getRole();
      return role == 'solicitante' || role == 'lider_tarea';
    }
    
    function isAutorizante() {
      return getRole() == 'autorizante';
    }

    function isMantenimiento() {
        return getRole() == 'mantenimiento';
    }

    function isLiderSST() {
        return getRole() == 'lider_sst';
    }
    
    function isLiderTarea() {
      return getRole() == 'lider_tarea';
    }
    
    function isCoordinadorAlturas() {
      // Por ahora, asumimos que el Líder SST puede actuar como coordinador
      return isLiderSST();
    }

    // --- Colección de Usuarios (users) ---
    match /users/{userId} {
      allow read: if isAdmin() || isOwner(userId);
      allow list: if isAdmin();
      allow update: if isOwner(userId) || isAdmin();
      allow create, delete: if false;
    }
    
    // --- Colección de Notificaciones (notifications) ---
    match /notifications/{notificationId} {
      // Un usuario puede leer y listar sus propias notificaciones.
      allow read, list: if isSignedIn() && resource.data.userId == request.auth.uid;
      
      // Un usuario puede actualizar su propia notificación, pero solo para marcarla como leída.
      allow update: if isSignedIn() && resource.data.userId == request.auth.uid && request.resource.data.keys().hasOnly(['isRead']);

      // La creación y eliminación de notificaciones solo se hace desde el servidor.
      allow create, delete: if false;
    }

    // --- Colección de Permisos (permits) ---
    match /permits/{permitId} {
      allow read: if isAdmin() || isAutorizante() || isLiderSST() || isCreator(resource.data);
      allow list: if isAdmin() || isAutorizante() || isLiderSST();
      allow create, delete: if false;
      allow update: if 
        isAdmin() ||
        (isCreator(resource.data) && resource.data.status == 'borrador') ||
        (
          isSignedIn() &&
          (
            (
                resource.data.trabajoAlturas == true && isCoordinadorAlturas() &&
                request.resource.data.approvals.coordinador_alturas.status == 'aprobado' &&
                resource.data.approvals.coordinador_alturas.status == 'pendiente'
            ) ||
            (
                isSolicitante() && request.resource.data.approvals.solicitante.status == 'aprobado' &&
                resource.data.approvals.solicitante.status == 'pendiente' &&
                (resource.data.trabajoAlturas == false || resource.data.approvals.coordinador_alturas.status == 'aprobado') &&
                request.resource.data.status == 'pendiente_revision'
            ) ||
            (
                resource.data.status == 'pendiente_revision' && isAutorizante() &&
                resource.data.approvals.solicitante.status == 'aprobado' &&
                request.resource.data.approvals.autorizante.status == 'aprobado' &&
                resource.data.approvals.autorizante.status == 'pendiente' &&
                // NUEVA REGLA: Permite cambiar a en_ejecucion directamente
                (request.resource.data.status == 'en_ejecucion' || request.resource.data.status == 'pendiente_revision')
            ) ||
            (
                resource.data.status == 'pendiente_revision' && isMantenimiento() &&
                resource.data.controlEnergia == true &&
                resource.data.approvals.autorizante.status == 'aprobado' &&
                request.resource.data.approvals.mantenimiento.status == 'aprobado' &&
                resource.data.approvals.mantenimiento.status == 'pendiente'
            ) ||
            (
                resource.data.status == 'pendiente_revision' && isLiderSST() &&
                resource.data.approvals.solicitante.status == 'aprobado' &&
                resource.data.approvals.autorizante.status == 'aprobado' &&
                request.resource.data.approvals.lider_sst.status == 'aprobado' &&
                resource.data.approvals.lider_sst.status == 'pendiente'
            )
          )
        ) ||
        (
          isSignedIn() && 
          (
            (request.resource.data.status == 'rechazado' && resource.data.status == 'pendiente_revision' && (isAutorizante() || isLiderSST())) ||
            (request.resource.data.status == 'suspendido' && resource.data.status == 'en_ejecucion' && isLiderSST()) ||
            (request.resource.data.status == 'cerrado' && (resource.data.status == 'en_ejecucion' || resource.data.status == 'suspendido') && isLiderTarea())
          )
        );
    }

    // --- Colección de Listas Dinámicas (dynamic_lists) ---
    match /dynamic_lists/{listName} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // --- Colección de Prueba (test) ---
    match /test/{docId} {
      allow read: if true;
      allow write: if isSignedIn();
    }
  }
}

rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Reglas para la colecci贸n 'users'
    match /users/{userId} {
      // Un usuario puede leer y actualizar su propio perfil.
      allow read, update: if request.auth.uid == userId;
      // Los administradores pueden leer y escribir en cualquier perfil de usuario.
      allow read, write: if request.auth.token.role == 'admin';
      // Un usuario puede crear su propio documento de perfil.
      allow create: if request.auth.uid == userId;
    }

    // Reglas para la colecci贸n 'test'
    match /test/{docId} {
      // Cualquier usuario autenticado puede crear documentos en la colecci贸n 'test'.
      allow create: if request.auth != null;
    }

    // Reglas para la colecci贸n 'permits'
    match /permits/{permitId} {
      // Cualquier usuario autenticado puede crear, leer y actualizar permisos.
      allow read, write, create, update: if request.auth != null;
    }
  }
}

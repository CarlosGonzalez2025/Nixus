
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isAdmin() {
      return isSignedIn() && getRole() == 'admin';
    }

    function isCreator(permit) {
      return request.auth.uid == permit.createdBy;
    }
    
    function isSolicitante() {
      let role = getRole();
      return role == 'solicitante' || role == 'lider_tarea';
    }
    
    function isAutorizante() {
      return getRole() == 'autorizante';
    }

    function isMantenimiento() {
        return getRole() == 'mantenimiento';
    }

    function isLiderSST() {
        return getRole() == 'lider_sst';
    }
    
    function isLiderTarea() {
      return getRole() == 'lider_tarea';
    }

    // --- Colección de Usuarios (users) ---
    match /users/{userId} {
      // Un admin puede listar todos los usuarios, un usuario autenticado puede leer su propio perfil.
      allow read: if isAdmin() || isOwner(userId);
      allow list: if isAdmin();
      
      // Un usuario puede actualizar su propio perfil, un admin puede actualizar cualquier perfil.
      allow update: if isOwner(userId) || isAdmin();

      // La creación de usuarios se hace desde el servidor (Admin SDK), no desde el cliente.
      allow create: if false;

      // Nadie puede borrar perfiles de usuario desde la app.
      allow delete: if false;
    }

    // --- Colección de Permisos (permits) ---
    match /permits/{permitId} {
      // LECTURA: Admins, Autorizantes y Líderes SST pueden leer todos. Solicitantes solo los suyos.
      allow read: if isAdmin() || isAutorizante() || isLiderSST() || isCreator(resource.data);

      // LIST: Admins, Autorizantes y Líderes SST pueden listar. Solicitantes usan query filtrada.
      allow list: if isAdmin() || isAutorizante() || isLiderSST();

      // CREACIÓN/ELIMINACIÓN: Protegidas, solo se hacen desde el servidor.
      allow create, delete: if false;

      // ACTUALIZACIÓN: Lógica de negocio compleja para los diferentes roles y estados.
      allow update: if 
        // Regla 1: Un admin puede hacer cualquier cambio.
        isAdmin() ||
        
        // Regla 2: El creador del permiso (solicitante/lider_tarea) puede modificarlo si aún no ha firmado.
        (isCreator(resource.data) && resource.data.approvals.solicitante.status == 'pendiente') ||

        // Regla 3: Un usuario puede firmar su propia aprobación si el permiso está pendiente y se cumple la secuencia.
        (
          isSignedIn() && resource.data.status == 'pendiente_revision' &&
          (
            // Solicitante firma (es el primero, no tiene pre-condición)
            (isSolicitante() && request.resource.data.approvals.solicitante.status == 'aprobado' && resource.data.approvals.solicitante.status == 'pendiente') ||
            
            // Autorizante firma DESPUÉS del solicitante
            (isAutorizante() && resource.data.approvals.solicitante.status == 'aprobado' && request.resource.data.approvals.autorizante.status == 'aprobado' && resource.data.approvals.autorizante.status == 'pendiente') ||
            
            // Mantenimiento firma DESPUÉS del autorizante (y solo si es trabajo de energía)
            (isMantenimiento() && resource.data.controlEnergia == true && resource.data.approvals.autorizante.status == 'aprobado' && request.resource.data.approvals.mantenimiento.status == 'aprobado' && resource.data.approvals.mantenimiento.status == 'pendiente') ||
            
            // SST firma DESPUÉS del autorizante
            (isLiderSST() && resource.data.approvals.solicitante.status == 'aprobado' && resource.data.approvals.autorizante.status == 'aprobado' && request.resource.data.approvals.lider_sst.status == 'aprobado' && resource.data.approvals.lider_sst.status == 'pendiente')
          )
        ) ||
        
        // Regla 4: Cambiar el estado del permiso.
        (
          isSignedIn() && 
          (
            // Aprobar: Solo el autorizante puede hacerlo si el permiso está pendiente y las firmas requeridas están listas.
            (request.resource.data.status == 'aprobado' && resource.data.status == 'pendiente_revision' && isAutorizante() && resource.data.approvals.solicitante.status == 'aprobado' && resource.data.approvals.autorizante.status == 'aprobado') ||
            // Rechazar: Autorizante o SST pueden rechazar si está pendiente.
            (request.resource.data.status == 'rechazado' && resource.data.status == 'pendiente_revision' && (isAutorizante() || isLiderSST())) ||
            // Iniciar Ejecución: El líder de la tarea puede iniciar si está aprobado.
            (request.resource.data.status == 'en_ejecucion' && resource.data.status == 'aprobado' && isLiderTarea()) ||
            // Suspender: El líder SST puede suspender si está en ejecución.
            (request.resource.data.status == 'suspendido' && resource.data.status == 'en_ejecucion' && isLiderSST()) ||
             // Cerrar: El líder de la tarea puede cerrar si está en ejecución o suspendido.
            (request.resource.data.status == 'cerrado' && (resource.data.status == 'en_ejecucion' || resource.data.status == 'suspendido') && isLiderTarea())
          )
        );
    }

    // --- Colección de Listas Dinámicas (dynamic_lists) ---
    match /dynamic_lists/{listName} {
      // Cualquier usuario autenticado puede leer las listas (para los desplegables).
      allow read: if isSignedIn();

      // Solo los administradores pueden crear, actualizar o eliminar listas.
      allow write: if isAdmin();
    }

    // --- Colección de Prueba (test) ---
    match /test/{docId} {
      // Cualquiera puede leer, pero solo usuarios autenticados pueden escribir.
      allow read: if true;
      allow write: if isSignedIn();
    }
  }
}

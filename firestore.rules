rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to get user's role from the 'users' collection
    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    match /users/{userId} {
      // Admins can read and write any user profile
      allow read, write: if getUserRole(request.auth.uid) == 'admin';

      // Users can only read and write their own profile
      allow read, write: if request.auth.uid == userId;
    }

    match /users/{document=**} {
      // Admins can list all users
      allow list: if getUserRole(request.auth.uid) == 'admin';
    }

    match /permits/{permitId} {
      // Any authenticated user can create permits
      allow create: if request.auth.uid != null;
      
      // Any authenticated user can read permits for now (adjust if needed)
      allow read, update, delete: if request.auth.uid != null;
    }
    
    match /test/{documentId} {
      allow write: if request.auth != null;
    }
  }
}

rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Colección de Usuarios (users) ---
    match /users/{userId} {
      // PERMITIR LECTURA (GET): Un usuario puede leer su propio perfil.
      allow get: if request.auth != null && request.auth.uid == userId;

      // PERMITIR LISTADO (LIST): Solo un administrador puede leer la lista de todos los usuarios.
      // Esto es crucial para la página de "Gestión de Usuarios".
      allow list: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';

      // PERMITIR ACTUALIZACIÓN (UPDATE): Un usuario puede actualizar su propio perfil,
      // o un administrador puede actualizar cualquier perfil de usuario.
      allow update: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');

      // DENEGAR CREACIÓN/ELIMINACIÓN: Estas operaciones solo se realizan de forma segura desde el servidor.
      allow create, delete: if false;
    }

    // --- Colección de Permisos (permits) ---
    match /permits/{permitId} {
      // PERMITIR LECTURA (get y list): Cualquier usuario autenticado puede ver los permisos.
      // Esto es necesario para el dashboard y la lista de permisos.
      allow read: if request.auth != null;

      // PERMITIR ACTUALIZACIÓN: Un usuario puede actualizar un permiso (ej. firmar),
      // o un administrador puede realizar cualquier cambio.
      allow update: if request.auth != null;

      // DENEGAR CREACIÓN/ELIMINACIÓN: Se manejan de forma segura desde el servidor.
      allow create, delete: if false;
    }

    // --- Colección de Prueba (test) ---
    match /test/{docId} {
      // Para fines de prueba, cualquiera puede leer, pero solo los autenticados pueden escribir.
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}

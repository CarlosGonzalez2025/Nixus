rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para la colección 'users'
    match /users/{userId} {
      // Cualquier usuario autenticado puede crear su propio perfil.
      allow create: if request.auth != null && request.auth.uid == userId;
      // Solo el propietario del perfil o un administrador puede leer o actualizar el perfil.
      allow read, update: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }

    // Reglas para la colección 'test'
    match /test/{docId} {
      // Cualquier usuario autenticado puede escribir en la colección de prueba.
      allow write: if request.auth != null;
    }

    // Reglas para la colección 'permits'
    match /permits/{permitId} {
      // Cualquier usuario autenticado puede crear un nuevo permiso.
      allow create: if request.auth != null;
      // Los usuarios autenticados pueden leer los permisos (se puede ajustar más adelante si es necesario).
      allow read: if request.auth != null;
    }
  }
}
